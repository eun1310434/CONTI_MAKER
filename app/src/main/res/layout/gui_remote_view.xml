<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background = "@drawable/landscape_bback">
    
        <RelativeLayout 
        	android:id="@+id/bar"
        	android:layout_width="fill_parent"
        	android:layout_height="30dp"
    		android:layout_alignParentTop="true"
    		android:layout_centerHorizontal="true"
    		android:background="@drawable/rl_top_bar"
        	>
        	
	    <ImageView 
    	    android:id="@+id/icon"
	        android:layout_width="20dp"
	        android:layout_height="20dp"
	        android:layout_alignParentLeft="true"
	        android:layout_marginLeft="10dp"
        	android:layout_centerVertical="true"
	        android:src="@drawable/iv_logo"
	        android:scaleType="fitXY"
	        />
    
	    
	    <TextView 
	    	android:id="@+id/TV_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@+id/icon"
        	android:layout_marginLeft="5dp"
        	android:layout_centerVertical="true"
	        android:text="REMOTE VIEW"
	        android:textSize="12sp"
	    	android:textColor="@color/white"
	        />
    
	    
	    <TextView 
	    	android:id="@+id/TV_my_s_id"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="10dp"
        	android:layout_centerVertical="true"
	        android:text="asdfasdfasdf"
	        android:textSize="12sp"
	    	android:textColor="@color/white"
	        />
        
        </RelativeLayout>
        		
               	<TextView 
               	    android:id="@+id/TV_title"
               	    android:layout_width="wrap_content"
               	    android:layout_height="wrap_content"
               	    android:layout_centerInParent="true"
               	    android:text="접속 대기중 입니다...."
               	   	android:textSize="20dp"
               	   	android:textColor="@color/white"
               	    />
</RelativeLayout>