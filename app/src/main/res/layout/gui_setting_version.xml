<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/main_1"
    android:orientation="vertical" >
    
        <RelativeLayout 
        	android:id="@+id/RL_top"
        	android:layout_width="fill_parent"
        	android:layout_height="30dp"
    		android:layout_alignParentTop="true"
    		android:layout_centerHorizontal="true"
    		android:background="@drawable/rl_top_bar"
        	>
    		
	    	<ImageView 
	    	    android:id="@+id/IV_icon"
	        	android:layout_width="20dp"
	        	android:layout_height="20dp"
	        	android:layout_alignParentLeft="true"
	        	android:layout_marginLeft="10dp"
	        	android:layout_centerVertical="true"
	        	android:src="@drawable/iv_logo"
	        	android:scaleType="fitXY"
	        	/>
	    
		    
		    <TextView 
		    	android:id="@+id/TV_title"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_toRightOf="@+id/IV_icon"
	        	android:layout_marginLeft="5dp"
	        	android:layout_centerVertical="true"
		        android:text="VERSION"
		        android:textSize="12sp"
		    	android:textColor="@color/white"
		        />
    		
    		<TextView 
		    	android:id="@+id/TV_message"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:text=""
        		android:textSize="12sp"
        		android:layout_centerInParent="true"
    			android:textColor="@color/whitesmoke"
        		/>
        
        </RelativeLayout>
		    
		    
	<RelativeLayout 
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:layout_below="@+id/bar"
		android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
		 >
    		
    		<TextView 
    		    android:id="@+id/info_title"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:text=""
        		android:textSize="15sp"
    			android:textColor="@color/white"
        		android:layout_centerHorizontal="true"
        		/>
    		
    		<TextView 
    		    android:id="@+id/info_content"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:text="당신의 콘티메이커 버전을 확인하세요."
        		android:textSize="13sp"
        		android:layout_below="@+id/info_title"
    			android:textColor="@color/lightgray"
        		android:layout_centerHorizontal="true"
        		/>
    		
    		<TextView 
    		    android:id="@+id/TV_s_version"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_marginTop="10dp"
        		android:text="Gen 1.0"
        		android:textSize="20sp"
        		android:layout_below="@+id/info_content"
    			android:textColor="@color/lightgray"
        		android:layout_centerHorizontal="true"
        		/>
    
			<ImageView 
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
        		android:layout_below="@+id/info_content"
				android:layout_marginTop="50dp"
				android:layout_marginLeft="50dp"
				android:layout_marginRight="50dp"
				android:src="@drawable/iv_logo_a"
				android:scaleType="fitStart"
				/>
	    
	</RelativeLayout>
    
		    
	<RelativeLayout 
		android:layout_height="200dp"
		android:layout_width="fill_parent"
		android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
		 >
	    
		<Button
			android:id="@+id/B_next"
			android:layout_width="fill_parent"
			android:layout_height="50dp"
			android:layout_centerInParent="true"
			android:layout_marginLeft="50dp"
			android:layout_marginRight="50dp"
			android:scaleType="fitXY"
        	android:background="@drawable/b_click_white_blue"
			android:text="확 인"
        	android:textSize="15dp"
			/>
	</RelativeLayout>
	
	

</RelativeLayout>